{
  "package": {
    "productName": "ChefDeck",
    "version": "0.1.0"
  },
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.cdrice.chefdeck",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png"
      ],
      "resources": [],
      "targets": [
        "deb",
        "msi",
        "dmg"
      ]
    },
    "updater": {
      "active": false
    },
    "security": {
      "csp": null
    },
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "ChefDeck",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "meta": {
    "initialized": true,
    "nextSteps": "This file provides a minimal Tauri configuration to mark the desktop app as initialized. To complete the native setup (generate platform-specific files under src-tauri, install the native toolchain, and create platform icons), run `tauri init` inside apps/desktop. After that, install dependencies and follow Tauri's prompts to finish setup."
  }
}

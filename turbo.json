{
    "$schema": "https://turborepo.org/schema.json",
    "globalDependencies": [
        "package.json",
        "pnpm-lock.yaml",
        "pnpm-workspace.yaml"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                "dist/**",
                ".next/**",
                "build/**",
                "apps/desktop/src-tauri/target/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build"]
        },
        "lint": {
            "outputs": []
        },
        "test": {
            "outputs": []
        },
        "format": {
            "outputs": []
        }
    }
}

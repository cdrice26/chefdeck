{
  "name": "chefdeck",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@11.6.2",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=chefdeck-web...",
    "dev:desktop": "turbo run dev --filter=chefdeck-desktop...",
    "build": "turbo run build",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "eslint": "^9",
    "prettier": "^3.7.3",
    "turbo": "^2.6.1",
    "typescript": "^5"
  }
}
